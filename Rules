#!/usr/bin/env ruby
# -*- coding: utf-8 -*-


compile '/stylesheet/' do
        # donâ€™t filter or layout
end

compile '/js/*' do
end

compile '/icons/*' do
end

compile '/papers/*' do
end

compile '*' do
        filter :erb
        layout 'default'
end


route '/stylesheet/' do
        '/style.css'
end

route '/js/*' do
        @item.identifier.chop + '.' + @item[:extension]
end

route '/icons/*' do
        @item.identifier.chop + '.' + @item[:extension]
end

route '/papers/*' do
        @item.identifier.chop + '.' + @item[:extension]
end

route '*' do
        item.identifier + 'index.html'
end


layout '*', :erb
